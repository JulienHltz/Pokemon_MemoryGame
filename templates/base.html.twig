<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
			- Pokemon MemoryGame</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css?version=#">


		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body id="body">
		<header>

		{% if app.user %}

			<nav id="nav">
				<div>
					<i class="fa-solid fa-user"></i>
					<a href="{{ path('app_user_profile') }}">{{ app.user.pseudo }}</a> {# TODO Mettre le template en place#}
				</div>
				<ul>
					<li>
						<a href="{{ path('app_user_profile') }}">
							<i class="fa-solid fa-house"></i>
							Profil</a>
					</li>
					<li>
						<a href="{{ path('app_game_mode') }}">
							<i class="fa-solid fa-gamepad"></i>
							Modes de jeu</a>
					</li>
					<li>
						<a href="{{ path('app_ranking') }}">
							<i class="fa-solid fa-trophy"></i>
							Classement</a>
					</li>
					<li>
						<a href="{{ path('app_logout') }}">
							<i class="fa-solid fa-power-off"></i>
							Déconnexion</a>
					</li>
				</ul>
			</nav>
		{% endif %}
		</header>
		{% block body %}{% endblock %}
	</body>
</html>
