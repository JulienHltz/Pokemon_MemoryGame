{% extends 'base.html.twig' %}

{% block title %}Memory Game{% endblock %}

{% block body %}
<!-- Sound -->
    {# <audio src="{{asset('music/menu.mp3')}}" id="gamemusic" ></audio> #}
	
<!-- Img -->
<img id="background" src="{{asset('img/background2.jpg')}}" alt="">
<!-- Sound Btn ON/OFF -->
<button id="mute">
    <i class="fa-solid fa-volume-xmark" id="fa_sound"></i>
</button>

<div id="gamePageContainer">
	<div id="countdownBlock"><i class="fa-regular fa-hourglass-half"></i> Temps restant : <span id="countdown">25</span></div>

<div id="gameContainer">
	{# <p><img class="pokeball" src="{{poke_img}}" alt=""></p> #}
	<div class="grid">
		{% for i in 1..24 %}
			<div class="grid-item" data-y="{{ i }}" data-x="{{ i }}">
				<img class="pokeball" src="{{asset('img/pokeball.svg')}}" alt=""></div>
		{% endfor %}

	</div>

	<div id="gameStatsBlock">
	<div id="pairs"><i class="fa-solid fa-circle-check"></i> Nombre de paires trouv√©es : <span id="pairsFound">0</span>/12</div>
	<div id="life"><i class="fa-solid fa-heart"></i> Nombre de vies restantes : <span id="lifeLeft"><i class="fa-solid fa-heart"></i><i class="fa-solid fa-heart"></i><i class="fa-solid fa-heart"></i><i class="fa-solid fa-heart"></i><i class="fa-solid fa-heart"></i></span></div>
	</div>

</div>



</div>


{% endblock %}
{% block javascripts %}
			{{ encore_entry_script_tags('gs') }}
{% endblock %}

